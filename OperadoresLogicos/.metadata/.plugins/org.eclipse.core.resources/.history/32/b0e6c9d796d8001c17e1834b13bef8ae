package Exercicio;

public class Main {

	public static void main(String[] args) {
		
		boolean b1 = true;
		boolean b2 = false;
		boolean b3 = true;
		boolean b4 = false;
		
		System.out.println("Tabela && (and/e)");
		System.out.println("b1 && b3: " + (b1 && b3));
		System.out.println("b3 && b4: " + (b3 && b4));
		System.out.println("b2 && b3: " + (b2 && b3));
		System.out.println("b2 && b4: " + (b2 && b4));
		
		System.out.println("Tabela || (or/ou)");
		System.out.println("b1 || b3: " + (b1 || b3));
		System.out.println("b3 || b4: " + (b3 || b4));
		System.out.println("b2 || b3: " + (b2 || b3));
		System.out.println("b2 || b4: " + (b2 || b4));
		
		System.out.println("Tabela ^ (xor)");
		System.out.println("b1 ^ b3: " + (b1 ^ b3));
		System.out.println("b3 ^ b4: " + (b3 ^ b4));
		System.out.println("b2 ^ b3: " + (b2 ^ b3));
		System.out.println("b2 ^ b4: " + (b2 ^ b4));
		
		System.out.println("Tabela ! (inversão)");
		System.out.println("Inversão de b1: " + (!b1));
		System.out.println("Inversão de b2: " + (!b2));
		
		
		
	}

}
